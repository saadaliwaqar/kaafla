{
  "expo": {
    "name": "Kaafla",
    "slug": "kaafla",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kaafla",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kaafla.convoy",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Kaafla needs your location to track your position in the convoy.",
        "NSLocationAlwaysUsageDescription": "Kaafla needs your location to track your position even when the app is in the background."
      }
    },
    "android": {
      "package": "com.kaafla.convoy",
      "adaptiveIcon": {
        "backgroundColor": "#121212",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "SEND_SMS",
        "RECEIVE_SMS",
        "READ_SMS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECEIVE_SMS",
        "android.permission.READ_SMS"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#121212",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Kaafla needs your location to track your convoy position."
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "RNMAPBOX_MAPS_DOWNLOAD_TOKEN"
        }
      ],
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "0a024684-2fc5-4e37-92da-c51e5fdee39b"
      },
      "mapboxAccessToken": "pk.eyJ1Ijoic2FhZGFsaXdhcWFyIiwiYSI6ImNta3dvMDhmbDAxOXUzZXM0OTlzdDZnY3AifQ.wkiyTWwT1I1jH3yukvU3uw"
    },
    "owner": "saadaliwaqars-organization"
  }
}